<div class="row">
    <button id="ShowOrders" class="btn btn-primary">Show All Orders</button>
    <form id="GetOrder"class="form-inline">
      <input class="form-control ml-sm-4 mr-sm-2" type="search" placeholder="Search Product Id" name="id" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">User Name</th>
        <th scope="col">PRODUCT NAME</th>
        <th scope="col">PER PRICE</th>
        <th scope="col">AMOUNT</th>
        <th scope="col">CreatedBy</th>
        <th scope="col">UpdateTime</th>
        <th scope="col">DELETE</th>
        <th scope="col">UPDATE</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <section data-id="{{order.id}}">
            <th scope="row">{{order.id}}</th>
            <td>{{order.customer.username}}</td>
            <td>{{order.product.name}}</td>
            <td>$  {{order.product.price}}</td>
            <td>{{order.amount}}</td>
            <td>{{order.user.email}}</td>
            <td>{{order.updated_at}}</td>
            {{#if (isdeleteproduct order.user.email) }}
            <td><button class="deleteorder btn btn-primary" data-id="{{order.id}}">Delete</button></td>
            <td>
              <button type="button"  class="btn btn-primary ml-sm-4" data-toggle="modal" data-backdrop="false" data-target="#UpdateOrderModal" >
              Update
              </button>

              <!-- Modal -->
              <div class="modal fade" id="UpdateOrderModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title customer-id" >{{order.id}}</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form id="UpdateOrder">
                        <fieldset disabled>
                          <div class="form-group">
                            <label >ID</label>
                            <input type="text" class="form-control"  placeholder="ID" name="order[id]" value="{{order.id}}">
                          </div>
                        </fieldset>
                        <div class="form-group">
                          <label>CUSTOMER</label>
                          <input type="text" class="form-control" placeholder="Customer" name="order[customer_id]" value="{{order.customer.id}}">
              <!--             <select id="selectcustomer" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                <option selected>Choose...</option>
              </select> -->
                        </div>
                        <div class="form-group">
                          <label>PRODUCT</label>
                          <input type="text" class="form-control" placeholder="Product" name="order[product_id]" value="{{order.product.id}}">
                        </div>
                        <div class="form-group">
                          <label>AMOUNT</label>
                          <input type="text" class="form-control" placeholder="Amount" name="order[amount]" value="{{order.amount}}">
                        </div>
                        <button type="submit" class="btn btn-primary" >Submit</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </td>
            {{else}}
            <td><a>You can't Delete</a></td>
            <td><a>You can't Update</a></td>
            {{/if}}
          </section>
        </tr>
    </tbody>
  </table>
</div>
