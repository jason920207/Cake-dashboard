  {{#each products as |product|}}
      <div class="carousel-item">
        <img src="{{product.picture}}" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5 class="text-dark">{{product.name}}</h5>
          <p class="text-dark">{{product.description}}</p>
        </div>
      </div>
  {{/each}}

